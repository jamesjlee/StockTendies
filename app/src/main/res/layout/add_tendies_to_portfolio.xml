<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.crisdev.stocktendies.AddTendiesToPortfolio">

    <SearchView
        android:id="@+id/searchForTendies"
        android:queryHint="Search for tendies..."
        android:layout_width="match_parent"
        android:focusable="true"
        android:iconifiedByDefault="false"
        android:layout_height="wrap_content">
    </SearchView>

    <ProgressBar
        android:id="@+id/addToPortfolioSpinner"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchForTendies"/>


</android.support.constraint.ConstraintLayout>
