<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline0"
        app:layout_constraintGuide_percent=".00"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline1"
        app:layout_constraintGuide_percent=".25"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline2"
        app:layout_constraintGuide_percent=".50"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline3"
        app:layout_constraintGuide_percent=".75"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline4"
        app:layout_constraintGuide_percent="1.00"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/rowTenderImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintRight_toLeftOf="@+id/rowTenderName" />

    <TextView
        android:id="@+id/rowTenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="AMD"
        app:layout_constraintTop_toBottomOf="@+id/tenderName"
        app:layout_constraintLeft_toRightOf="@+id/rowTenderImage"
        app:layout_constraintStart_toEndOf="@+id/rGuideline0"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline1">
    </TextView>

    <TextView
        android:id="@+id/rowTenderHoldings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tenderHoldingsText"
        app:layout_constraintStart_toEndOf="@+id/rGuideline1"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline2"
        app:layout_constraintRight_toLeftOf="@+id/rowTenderSharesText">
    </TextView>

    <TextView
        android:id="@+id/rowTenderSharesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/sharesText"
        app:layout_constraintLeft_toRightOf="@+id/rowTenderHoldings"
        app:layout_constraintTop_toBottomOf="@+id/tenderHoldingsText">
    </TextView>

    <TextView
        android:id="@+id/rowTenderMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/rowTenderHoldings"
        app:layout_constraintStart_toEndOf="@+id/rGuideline1"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline2">

    </TextView>

    <TextView
        android:id="@+id/rowTenderDayChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="1234"
        app:layout_constraintTop_toBottomOf="@+id/tenderDayChange"
        app:layout_constraintStart_toEndOf="@+id/rGuideline2"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline3"
        >
    </TextView>

    <TextView
        android:id="@+id/rowTenderPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/tendiesPercentSymbol"
        app:layout_constraintLeft_toRightOf="@+id/rowTenderDayChange"
        app:layout_constraintTop_toBottomOf="@+id/tenderDayChange">
    </TextView>


    <TextView
        android:id="@+id/rowTenderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="123"
        app:layout_constraintTop_toBottomOf="@+id/tenderPrice"
        app:layout_constraintStart_toEndOf="@+id/rGuideline3"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline4">
    </TextView>

    <ImageView
        android:id="@+id/rowTenderDrop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toBottomOf="@+id/tenderPrice"
        app:layout_constraintLeft_toRightOf="@+id/rowTenderPrice"/>

</android.support.constraint.ConstraintLayout>

