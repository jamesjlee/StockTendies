<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline0"
        app:layout_constraintGuide_percent="0.00"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline1"
        app:layout_constraintGuide_percent="0.10"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline2"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline3"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline4"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline5"
        app:layout_constraintGuide_percent="0.90"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rGuideline6"
        app:layout_constraintGuide_percent="1.00"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/rowTenderImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@+id/rGuideline0"
        app:layout_constraintLeft_toRightOf="@+id/rGuideline1" />

    <TextView
        android:id="@+id/rowTenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tenderName"
        app:layout_constraintLeft_toRightOf="@+id/rGuideline0"
        app:layout_constraintRight_toLeftOf="@+id/rGuideline2">
    </TextView>

    <TextView
        android:id="@+id/rowTenderHoldings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tenderHoldingsText"
        app:layout_constraintStart_toEndOf="@+id/rGuideline2"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline3">
    </TextView>

    <TextView
        android:id="@+id/rowTenderMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/rowTenderHoldings"
        app:layout_constraintStart_toEndOf="@+id/rGuideline2"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline3">

    </TextView>

    <TextView
        android:id="@+id/rowTenderDayChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tenderDayChange"
        app:layout_constraintStart_toEndOf="@+id/rGuideline4"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline3"
        >
    </TextView>

    <TextView
        android:id="@+id/rowTenderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="0.00"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tenderPrice"
        app:layout_constraintStart_toEndOf="@+id/rGuideline4"
        app:layout_constraintEnd_toEndOf="@+id/rGuideline5">
    </TextView>

    <ImageView
        android:id="@+id/rowTenderDrop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toBottomOf="@+id/tenderPrice"
        app:layout_constraintLeft_toRightOf="@+id/rGuideline5"
        app:layout_constraintRight_toLeftOf="@+id/rGuideline6"/>

</android.support.constraint.ConstraintLayout>

